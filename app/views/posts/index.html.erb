

<h1>Posts</h1>

<% @posts.each do |post| %>
  <p id="post-title"><%= link_to post.title, "http://" + post.link %> | <span id="link">(<%= post.link %>)</span></p>
  <p id="post-info">Submitted by <%= post.user.username %> on <%= post.created_at.strftime("%m/%d/%Y") %> | <%= link_to "Comments", show_post_path(post.id) %></p>
<% end %>
<br/>
<% if logged_in? %>
  <%= link_to "New Post", new_post_path %>
<% else %>
  <%= link_to "Login to create new post", new_session_path %>
<% end %>
